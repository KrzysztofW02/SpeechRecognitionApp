<Window x:Class="SpeechRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechRecognitionApp"
        mc:Ignorable="d"
        Title="Speech Recognition App" Height="450" Width="800">
    <Grid>
        <Label x:Name="StatusLabel" Content="Click 'Start' to begin recording" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="30" Width="500" />
        <Button Name="StartButton" Content="Start Recording" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="138,64,0,0" Click="StartButton_Click"/>
        <Button Name="StopButton" Content="Stop Recording" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,64,0,0" Click="StopButton_Click" IsEnabled="False"/>
        <Button Name="SaveButton" Content="Save to File" Click="SaveButton_Click" Width="150" Height="50" Margin="514,64,136,0" VerticalAlignment="Top"/>
        <TextBox Name="ResultTextBox" Width="740" Height="266" VerticalAlignment="Top" HorizontalAlignment="Center" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,134,0,0"/>
    </Grid>
</Window>

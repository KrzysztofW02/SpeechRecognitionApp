<Window x:Class="SpeechRecognitionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechRecognitionApp"
        mc:Ignorable="d"
        Title="Speech Recognition App" Height="450" Width="800">
    <Grid>
        <Button Name="StartButton" Content="Start Recognition" Width="200" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Click="StartButton_Click"/>
        <TextBox Name="ResultTextBox" Width="711" Height="299" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
    </Grid>
</Window>
